<?xml version='1.0' encoding='utf-8'?>
<widget id="com.afadinsro.PinMe" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PinMe</name>
    <description>
        A simple application that pins the location of the user on a Google map.
    </description>
    <author email="mills.josef@gmail.com" href="https://millsjoseph.wordpress.com/">
        Adino Concepts
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.3.0" />
    <engine name="ios" spec="~4.5.2" />
    <engine name="windows" spec="~5.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value=" " />
    </plugin>
    
    <icon src="res/icon/android/icon.png" />
    <icon src="res/icon/android/icon.png"   gap:platform="android"    gap:qualifier="ldpi" />
    <icon src="res/icon/android/icon.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="res/icon/android/icon.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="res/icon/android/icon.png"  gap:platform="android"    gap:qualifier="xhdpi" />
    <icon src="res/icon/ios/icon.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="res/icon/ios/icon.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="res/icon/ios/icon.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="res/icon/ios/icon.png"         gap:platform="ios"        width="144" height="144" />
</widget>
